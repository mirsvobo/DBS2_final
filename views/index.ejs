<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Studentské Forum</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
<%- include('partials/navbar') %>
<div class="container mt-4">
    <h2>Příspěvky</h2>
    <div class="list-group">
        <% posts.forEach(post => { %>
            <a href="/posts/<%= post.PrispevekID %>" class="list-group-item list-group-item-action">
                <h5 class="mb-1"><%= post.Titulek %></h5>
                <p class="mb-1"><%= post.Obsah_prispevku.substring(0, 100) %>...</p>
                <small>Autor: <%= post.Jmeno %> <%= post.Prijmeni %>, Datum: <%= post.Cas_odeslani %></small>
            </a>
        <% }) %>
    </div>
    <% if (user) { %>
        <a href="/posts/new" class="btn btn-primary mt-4">Vytvořit nový příspěvek</a>
    <% } %>
</div>
<footer class="bg-dark text-white text-center py-3 mt-4">
    <p>© 2024 Studentské Forum</p>
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
