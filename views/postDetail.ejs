<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= post.Titulek %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
<header class="bg-dark text-white text-center py-3">
    <h1>Studentské Forum</h1>
</header>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Domů</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <% if (!user) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/login">Přihlásit se</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/register">Registrovat se</a>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <span class="nav-link">Vítejte, <%= user.Username %>!</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/logout">Odhlásit se</a>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>
<div class="container mt-4">
    <div class="post-detail card mb-4 shadow-sm">
        <div class="card-body">
            <h2 class="card-title"><%= post.Titulek %></h2>
            <p class="card-subtitle text-muted">Autor: <%= post.Jmeno %> <%= post.Prijmeni %> | Datum: <%= new Date(post.Cas_odeslani).toLocaleDateString() %></p>
            <p class="card-text"><%= post.Obsah_prispevku %></p>
            <% if (user && (user.UzivatelID === post.UzivatelID || user.OpravneniID === 3)) { %>
                <a href="/posts/<%= post.PrispevekID %>/edit" class="btn btn-warning">Upravit</a>
                <form action="/posts/<%= post.PrispevekID %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">Smazat</button>
                </form>
            <% } %>
        </div>
    </div>
    <div class="comments-section mt-4">
        <h3>Komentáře</h3>
        <% comments.forEach(comment => { %>
            <div class="comment card mb-2">
                <div class="card-body">
                    <p class="card-text"><%= comment.Obsah_komentare %></p>
                    <p class="card-subtitle text-muted">Autor: <%= comment.Jmeno %> <%= comment.Prijmeni %> | Datum: <%= new Date(comment.Cas_odeslani).toLocaleDateString() %></p>
                </div>
            </div>
        <% }) %>
        <% if (user) { %>
            <div class="comment-form mt-4">
                <form action="/comments" method="POST">
                    <input type="hidden" name="PrispevekID" value="<%= post.PrispevekID %>">
                    <div class="mb-3">
                        <label for="Obsah_komentare" class="form-label">Přidat komentář</label>
                        <textarea class="form-control" id="Obsah_komentare" name="Obsah_komentare" rows="3" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Odeslat</button>
                </form>
            </div>
        <% } %>
    </div>
</div>
<footer class="bg-dark text-white text-center py-3 mt-4">
    <p>© 2024 Studentské Forum</p>
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
