<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detail příspěvku</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
<header class="bg-dark text-white text-center py-3">
    <h1>Studentské Forum</h1>
</header>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Domů</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <% if (!user) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/login">Přihlásit se</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/register">Registrovat se</a>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <span class="nav-link">Vítejte, <%= user.Username %>!</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/logout">Odhlásit se</a>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>
<div class="container mt-4">
    <h2><%= post.Titulek %></h2>
    <p><%= post.Obsah_prispevku %></p>
    <p><small>Autor: <%= post.Jmeno %> <%= post.Prijmeni %>, Datum: <%= post.Cas_odeslani %></small></p>

    <% if (user && (user.UzivatelID === post.UzivatelID || user.OpravneniID === 3)) { %>
        <a href="/posts/<%= post.PrispevekID %>/edit" class="btn btn-primary">Upravit</a>
        <form action="/posts/<%= post.PrispevekID %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger">Smazat</button>
        </form>
    <% } %>

    <h3>Komentáře</h3>
    <div class="list-group">
        <% comments.forEach(comment => { %>
            <div class="list-group-item">
                <p><%= comment.Obsah_komentare %></p>
                <p><small>Autor: <%= comment.Jmeno %> <%= comment.Prijmeni %>, Datum: <%= comment.Cas_odeslani %></small></p>
                <% if (user && (user.UzivatelID === comment.UzivatelID || user.OpravneniID === 3)) { %>
                    <a href="/comments/<%= comment.KomentarID %>/edit" class="btn btn-primary btn-sm">Upravit</a>
                    <form action="/comments/<%= comment.KomentarID %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Smazat</button>
                    </form>
                <% } %>
            </div>
        <% }) %>
    </div>

    <% if (user) { %>
        <h4>Přidat nový komentář</h4>
        <form action="/posts/<%= post.PrispevekID %>/comments" method="POST">
            <div class="mb-3">
                <label for="Obsah_komentare" class="form-label">Komentář</label>
                <textarea class="form-control" id="Obsah_komentare" name="Obsah_komentare" rows="3" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Přidat komentář</button>
        </form>
    <% } %>
</div>
<footer class="bg-dark text-white text-center py-3 mt-4">
    <p>© 2024 Studentské Forum</p>
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
