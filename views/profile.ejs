<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profil uživatele</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
<%- include('partials/navbar', { user: user }) %>
<div class="container mt-4">
    <h1>Profil uživatele</h1>
    <p><strong>Uživatel:</strong> <%= user.Jmeno %> <%= user.Prijmeni %></p>
    <p><strong>Email:</strong> <%= user.Email %></p>
    <p><strong>Datum vytvoření:</strong> <%= user.CreatedAt %></p>

    <h2>Příspěvky</h2>
    <ul>
        <% posts.forEach(post => { %>
            <li><a href="/posts/<%= post.PrispevekID %>"><%= post.Titulek %></a></li>
        <% }) %>
    </ul>

    <h2>Aktualizovat profil</h2>
    <form action="/users/profile/<%= user.UzivatelID %>" method="post">
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="Email" value="<%= user.Email %>">
        </div>
        <div class="mb-3">
            <label for="jmeno" class="form-label">Jméno</label>
            <input type="text" class="form-control" id="jmeno" name="Jmeno" value="<%= user.Jmeno %>">
        </div>
        <div class="mb-3">
            <label for="prijmeni" class="form-label">Příjmení</label>
            <input type="text" class="form-control" id="prijmeni" name="Prijmeni" value="<%= user.Prijmeni %>">
        </div>
        <!-- Přidejte další pole pro další informace -->
        <button type="submit" class="btn btn-primary">Aktualizovat</button>
    </form>
</div>
<footer class="bg-dark text-white text-center py-3 mt-4">
    <p>© 2024 Studentské Forum</p>
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
